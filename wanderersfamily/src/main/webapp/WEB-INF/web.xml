<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>application apis</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>apis</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>application apis</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login servlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
        <init-param>
            <param-name>Content-Type</param-name>
            <param-value>application/json</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>login servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout servlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout servlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login validator</servlet-name>
        <servlet-class>servlets.ValidateLoginSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login validator</servlet-name>
        <url-pattern>/validatesession</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>uirequest handler</servlet-name>
        <servlet-class>servlets.HandleUiRequests</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uirequest handler</servlet-name>
        <url-pattern>/ui/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>requestFilter</filter-name>
        <filter-class>filters.RequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>requestFilter</filter-name>
        <url-pattern>/api/verified/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>
